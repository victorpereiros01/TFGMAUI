<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TFGMaui.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:TFGMaui.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:TFGMaui.ViewModels"
    x:Name="main_page"
    x:DataType="viewmodels:MainViewModel"
    BackgroundImageSource="fondo.jpg"
    BindingContext="{viewmodels:MainViewModel}">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding InitializeComponentsCommand}" EventName="Loaded" />
    </ContentPage.Behaviors>

    <VerticalStackLayout
        Padding="15"
        Background="WhiteSmoke"
        HeightRequest="550"
        WidthRequest="650">
        <HorizontalStackLayout>
            <Label
                Margin="20"
                HorizontalOptions="Center"
                Text="{Binding Saludos}"
                VerticalOptions="Center" />

            <Button
                BackgroundColor="Red"
                FontSize="Large"
                Text="Hobbyer"
                ToolTipProperties.Text="coso"
                WidthRequest="170">
                <!--<Button.Background>
                    <RadialGradientBrush>
                        <GradientStop Offset="0.7" Color="Black" />
                        <GradientStop Offset="0" Color="Transparent" />
                    </RadialGradientBrush>
                </Button.Background>

                <Button.GestureRecognizers>
                    <PointerGestureRecognizer PointerEnteredCommand="{Binding BtnEnteredCommand}" />
                </Button.GestureRecognizers>-->
            </Button>

            <Image
                Margin="10"
                Aspect="AspectFill"
                HeightRequest="50"
                Source="{Binding UsuarioActivo.Avatar}"
                WidthRequest="50" />
            <Label
                Margin="10"
                HorizontalOptions="Center"
                Text="{Binding UsuarioActivo.Username}"
                VerticalOptions="Center"
                WidthRequest="60" />

            <Button
                Command="{Binding NavegarCommand}"
                CommandParameter="SettingsPage"
                HeightRequest="50"
                HorizontalOptions="End"
                Text="A"
                WidthRequest="50" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <CarouselView
                BackgroundColor="LightYellow"
                HeightRequest="300"
                WidthRequest="200" />
            <CarouselView
                BackgroundColor="LightCyan"
                HeightRequest="300"
                WidthRequest="200" />
            <CarouselView
                BackgroundColor="LightGreen"
                HeightRequest="300"
                WidthRequest="200" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Button
                Margin="10,0,0,0"
                Command="{Binding NavegarCommand}"
                CommandParameter="MovieSeriesPage"
                HeightRequest="150"
                Text="Cinema"
                WidthRequest="140" />
            <Button
                Margin="10"
                Command="{Binding NavegarCommand}"
                CommandParameter="GamesPage"
                HeightRequest="150"
                Text="Games"
                WidthRequest="140" />
            <Button
                Command="{Binding NavegarCommand}"
                CommandParameter="BooksPage"
                HeightRequest="150"
                Text="Books"
                WidthRequest="140" />
            <Button
                Margin="10,0,0,0"
                Command="{Binding NavegarCommand}"
                CommandParameter="AnimeMangaPage"
                HeightRequest="150"
                Text="Ani-manga"
                WidthRequest="140" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
