<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TFGMaui.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:TFGMaui.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:TFGMaui.ViewModels"
    x:Name="main_page"
    x:DataType="viewmodels:MainViewModel"
    BackgroundImageSource="fondo.jpg"
    BindingContext="{viewmodels:MainViewModel}">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding InitializeComponentsCommand}" EventName="Loaded" />
    </ContentPage.Behaviors>

    <AbsoluteLayout
        HeightRequest="800"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="1200">
        <Button
            AbsoluteLayout.LayoutBounds="1095,10"
            BackgroundColor="Beige"
            Command="{Binding MinimizeAppCommand}" />

        <Button
            AbsoluteLayout.LayoutBounds="1145,10"
            BackgroundColor="Red"
            Command="{Binding CloseAppCommand}" />

        <Frame AbsoluteLayout.LayoutBounds="10,60,1180,730" CornerRadius="20">
            <Frame.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity=".5"
                    Radius="12"
                    Offset="10,10" />
            </Frame.Shadow>

            <Grid
                ColumnDefinitions="400,340,80,240,80"
                HeightRequest="730"
                RowDefinitions="80,100,380,140"
                WidthRequest="1180">

                <VerticalStackLayout
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="0"
                    Padding="10"
                    WidthRequest="380">
                    <CarouselView
                        CurrentItem="{Binding SavF}"
                        EmptyView="Add hobbies to favorites"
                        HeightRequest="510"
                        HorizontalOptions="Center"
                        IndicatorView="indicator"
                        IsSwipeEnabled="False"
                        ItemsSource="{Binding ListFav}"
                        Loop="True"
                        VerticalOptions="Center"
                        WidthRequest="380">
                        <CarouselView.ItemTemplate>
                            <DataTemplate x:Name="fav" x:DataType="models:SavedHobbieModel">
                                <Frame BackgroundColor="White" CornerRadius="10">
                                    <Frame.Background>
                                        <LinearGradientBrush EndPoint="0,1">
                                            <GradientStop Offset="0.9" Color="White" />
                                            <GradientStop Offset="0" Color="{Binding Color}" />
                                        </LinearGradientBrush>
                                    </Frame.Background>

                                    <VerticalStackLayout>
                                        <Image
                                            Aspect="AspectFill"
                                            HeightRequest="425"
                                            Source="{Binding Imagen}" />

                                        <Label
                                            Margin="5"
                                            FontAttributes="Bold"
                                            HorizontalOptions="Center"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding Title}"
                                            VerticalOptions="Center" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <IndicatorView
                        x:Name="indicator"
                        Margin="8"
                        CascadeInputTransparent="True"
                        HorizontalOptions="Center"
                        IndicatorSize="20"
                        VerticalOptions="Center" />
                </VerticalStackLayout>

                <VerticalStackLayout
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="0,10,0,0"
                    BackgroundColor="White"
                    ZIndex="1">
                    <CollectionView
                        EmptyView="Add hobbies to pending"
                        HeightRequest="470"
                        HorizontalOptions="Center"
                        ItemsSource="{Binding ListPend}"
                        SelectedItem="{Binding SavP}"
                        SelectionMode="Single"
                        VerticalOptions="Center"
                        VerticalScrollBarVisibility="Never"
                        WidthRequest="340">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout
                                HorizontalItemSpacing="10"
                                Orientation="Vertical"
                                Span="2"
                                VerticalItemSpacing="8" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:Name="pend" x:DataType="models:SavedHobbieModel">
                                <Frame
                                    CornerRadius="10"
                                    HeightRequest="220"
                                    HorizontalOptions="Start"
                                    WidthRequest="150">
                                    <Frame.Background>
                                        <LinearGradientBrush EndPoint="0,1">
                                            <GradientStop Offset="0.9" Color="White" />
                                            <GradientStop Offset="0" Color="{Binding Color}" />
                                        </LinearGradientBrush>
                                    </Frame.Background>

                                    <VerticalStackLayout>
                                        <Image
                                            Aspect="AspectFill"
                                            HeightRequest="140"
                                            Source="{Binding Imagen}" />

                                        <Label
                                            Margin="0,4,0,0"
                                            FontAttributes="Bold"
                                            HorizontalOptions="Center"
                                            Text="{Binding Title}"
                                            VerticalOptions="Center" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <VerticalStackLayout
                    Grid.Row="2"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    ZIndex="1">
                    <CollectionView
                        EmptyView="Add hobbies to seen"
                        HeightRequest="380"
                        HorizontalOptions="Center"
                        ItemsSource="{Binding ListSeen}"
                        VerticalOptions="Center"
                        VerticalScrollBarVisibility="Never"
                        WidthRequest="390">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout
                                HorizontalItemSpacing="5"
                                Orientation="Vertical"
                                Span="2"
                                VerticalItemSpacing="5" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:Name="seen" x:DataType="models:SavedHobbieModel">
                                <Frame
                                    CornerRadius="10"
                                    HeightRequest="370"
                                    WidthRequest="185">
                                    <Frame.Background>
                                        <LinearGradientBrush EndPoint="0,1">
                                            <GradientStop Offset="0.9" Color="White" />
                                            <GradientStop Offset="0" Color="{Binding Color}" />
                                        </LinearGradientBrush>
                                    </Frame.Background>

                                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                        <Image
                                            Aspect="Fill"
                                            HeightRequest="280"
                                            Source="{Binding Imagen}" />
                                        <Label
                                            Margin="0,4,0,0"
                                            FontAttributes="Bold"
                                            HorizontalOptions="Center"
                                            Text="{Binding Title}"
                                            VerticalOptions="Center" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    BackgroundColor="Red"
                    FontSize="Large"
                    Text="Hobbyer"
                    ToolTipProperties.Text="Homepage"
                    ZIndex="1">
                    <!--<Button.Background>
                        <RadialGradientBrush>
                            <GradientStop Offset="0.7" Color="Black" />
                            <GradientStop Offset="0" Color="Transparent" />
                        </RadialGradientBrush>
                    </Button.Background>-->

                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEnteredCommand="{Binding BtnEnteredCommand}" />
                    </Button.GestureRecognizers>
                </Button>

                <StackLayout
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="4"
                    Margin="-9"
                    BackgroundColor="White"
                    HorizontalOptions="Start"
                    WidthRequest="770" />

                <Frame
                    Grid.Row="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    Margin="10,20"
                    Padding="50,15">
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label
                            FontSize="Subtitle"
                            HorizontalOptions="Center"
                            Text="{Binding Saludos}"
                            VerticalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <Border
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    HeightRequest="70"
                    WidthRequest="70">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="50" />
                    </Border.StrokeShape>

                    <Image
                        Aspect="AspectFill"
                        HorizontalOptions="Center"
                        Source="{Binding UsuarioActivo.Avatar}"
                        VerticalOptions="Center" />
                </Border>

                <Frame
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="10"
                    Padding="50,15">
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label
                            FontSize="Title"
                            HorizontalOptions="Center"
                            Text="{Binding UsuarioActivo.Username}"
                            VerticalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>


                <Button
                    Grid.Row="0"
                    Grid.Column="4"
                    Background="DimGray"
                    Command="{Binding NavegarCommand}"
                    CommandParameter="SettingsPage"
                    HeightRequest="60" WidthRequest="70"
                    ImageSource="settings.png" />

                <HorizontalStackLayout
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="5">
                    <Button
                        Margin="10"
                        Command="{Binding NavegarCommand}"
                        CommandParameter="MovieSeriesPage"
                        FontSize="Subtitle"
                        Text="Cinema"
                        TextColor="Black"
                        WidthRequest="{Binding HobbieWidth}">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Offset="0.9" Color="Green" />
                                <GradientStop Offset="0" Color="Blue" />
                            </LinearGradientBrush>
                        </Button.Background>

                        <Button.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity=".5"
                                Radius="12"
                                Offset="10,10" />
                        </Button.Shadow>
                    </Button>

                    <Button
                        Margin="10"
                        Command="{Binding NavegarGCommand}"
                        CommandParameter="GamesPage"
                        FontSize="Subtitle"
                        Text="Games"
                        TextColor="Black"
                        WidthRequest="{Binding HobbieWidth}">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Offset="0.9" Color="Purple" />
                                <GradientStop Offset="0" Color="MediumPurple" />
                            </LinearGradientBrush>
                        </Button.Background>

                        <Button.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity=".5"
                                Radius="12"
                                Offset="10,10" />
                        </Button.Shadow>
                    </Button>

                    <Button
                        Margin="10"
                        Command="{Binding NavegarCommand}"
                        CommandParameter="BooksPage"
                        FontSize="Subtitle"
                        Text="Books"
                        TextColor="Black"
                        WidthRequest="{Binding HobbieWidth}">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Offset="0.9" Color="Yellow" />
                                <GradientStop Offset="0" Color="LightYellow" />
                            </LinearGradientBrush>
                        </Button.Background>

                        <Button.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity=".5"
                                Radius="12"
                                Offset="10,10" />
                        </Button.Shadow>
                    </Button>

                    <Button
                        Margin="10"
                        Command="{Binding NavegarCommand}"
                        CommandParameter="AnimeMangaPage"
                        FontSize="Subtitle"
                        Text="Ani-manga"
                        TextColor="Black"
                        WidthRequest="{Binding HobbieWidth}">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Offset="0.9" Color="Red" />
                                <GradientStop Offset="0" Color="Orange" />
                            </LinearGradientBrush>
                        </Button.Background>

                        <Button.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity=".5"
                                Radius="12"
                                Offset="10,10" />
                        </Button.Shadow>
                    </Button>
                </HorizontalStackLayout>
            </Grid>
        </Frame>
    </AbsoluteLayout>

</ContentPage>
